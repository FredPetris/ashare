<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for [@event, @picture] do |f| %>
      <%= f.error_notification %>

      <%= f.input :label, placeholder: "un nom pour votre image" %>
      <%= f.input :image_url, as: :file %>

      <p>
        <%= f.button :submit, class: "btn btn-primary" %>
        <%= link_to "Back", event_path(@event), class: "btn btn-info btn-back" %>
      </p>
    <% end %>
  </div>
</div>

<h1><%= @event.label %></h1>
<% if user_signed_in? and @event.user_id == current_user.id %>
  <%= link_to edit_event_path(@event) do %>
      <i class="glyphicon glyphicon-pencil"></i>
  <% end %>
<% end %>
<p>
  <%= @event.description %>
</p>

<p>
  <% if user_signed_in? and @event.user_id == current_user.id %>
    <%= link_to "Ajouter une image", new_event_picture_path(@event),
      class: "btn btn-primary" %>
  <% end %>
</p>

<div class="row">
  <% @event.pictures.each do |picture| %>
    <div class="col-xs-6 col-sm-3 ">
      <%= cl_image_tag picture.image_url, :width => 300, :crop => :fill %>
      <%= picture.label %>
      <% if user_signed_in? and @event.user_id == current_user.id %>
        <%= link_to event_picture_path(@event, picture),
          method: :delete,
          data: { confirm: "Are you sure?" } do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<p>
  <% if user_signed_in? and @event.user_id == current_user.id %>
    <%= link_to "Ajouter une date", new_event_occurrence_path(@event),
      class: "btn btn-primary" %>
  <% end %>
</p>

<div class="row text-center">
  <% @event.occurrences.each do |occurrence| %>
    <div class="col-xs-6 col-sm-3">
      <span>
        <%= occurrence.date.strftime('%a %d %b %Y') %> à
        <%= occurrence.time.strftime('%H') %> :
        <%= occurrence.time.strftime('%M') %>
        <% if user_signed_in? and @event.user_id == current_user.id %>
          <%= link_to event_occurrence_path(@event, occurrence),
            method: :delete,
            data: { confirm: "Are you sure?" } do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        <% end %>
        <p> Il reste <%= pluralize(@event.place - occurrence.participants.count, "place") %>
        </p>
      </span>
      <% if occurrence.participate?(current_user) %>
        <%= link_to "Je veux me désinscrire", occurrence.participate(current_user), method: :delete, class: "btn btn-danger" %>
      <% else %>
        <%= link_to "Je veux participer", occurrence_participants_path(occurrence), method: :post, class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to "Back", root_path, class: "btn btn-info btn-back" %>

<div class="row">
  <% @events.each do |event| %>
    <div class="col-lg-4 rm-padding-sm col-md-6">
      <div class="card">
        <div class="card_thumb">
          <% if event.pictures.count > 0 %>
            <%= link_to event_path(event) do %>
              <% cl_image_tag event.pictures.first.image_url, :width => 370, :height => 235, :crop => :fill %>
            <% end %>
          <% end %>
        </div>
        <div class="card_price">
          <%= "#{event.participation} â‚¬" %>
        </div>
        <div class="card_body">
          <h3 class="card_title"><%= event.label %></h3>
          <h4 class="card_category"><%= event.category %></h4>
          <p class="card_city"><%= event.city %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

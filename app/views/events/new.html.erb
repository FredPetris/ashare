<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for @event do |f| %>
      <%= f.error_notification %>

      <%= f.input :category %>
      <%= f.input :label, placeholder: "un nom pour votre évènement" %>
      <%= f.input :description %>
      <%= f.input :city %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :number %>
      <%= f.input :participation %>

      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<p>
  <%= link_to "Back", root_path, class: "btn btn-info btn-back" %>
</p>

<h1>Des idées d'évènements</h1>
<p>
  <%= link_to "Créer un évènement", new_event_path, class: "btn btn-primary" %>
</p>

<div class="row">
  <% @events.each do |event| %>
    <div class="col-md-4">

      <div class="card">
        <div class="card_thumb">
          <% if event.pictures.count > 0 %>
            <%= link_to event_path(event) do %>
              <% cl_image_tag event.pictures.first.image_url, :width => 370, :height => 235, :crop => :fill %>
            <% end %>
          <% end %>
        </div>
        <div class="card_price">
          <%= "#{event.participation} €" %>
        </div>
        <div class="card_body">
          <h3 class="card_title"><%= event.label %></h3>
          <h4 class="card_category"><%= event.category %></h4>
          <p class="card_city"><%= event.city %></p>
        </div>
        <div class="card_footer">
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-4">
    <form action="/events" method="get">
      <input type="text" name="search">
      <input type="submit">
    </form>
  </div>
</div>
